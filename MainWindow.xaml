        <Label Content="(ms)" HorizontalAlignment="Left" Margin="195,163,0,0" VerticalAlignment="Top"/>
        <Label Content="Encode/Decode:" HorizontalAlignment="Left" Margin="10,221,0,0" VerticalAlignment="Top"/>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="10,252,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.579,0.885"/>

    </Grid>
